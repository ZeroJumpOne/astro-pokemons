---
   interface Props {
      name?: string;
      url: string;
      isBig?: boolean;
   }

   const { name, url, isBig = false }: Props = Astro.props;
   const id = url.split('/').at(-2);
//    console.log(id);
   const imageUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
   // let classIsBig: string = "";
   // classIsBig = isBig ? "rounded flex flex-col items-center justify-center p-2" : "rounded border flex flex-col items-center justify-center p-2";  

---

<!-- <a href={`/pokemons/${name}`} -->
<a href={`/pokemons/${name}`}
    class:list={[
      'rounded flex flex-col items-center justify-center p-2',
      {
         border: !isBig
      }
    ]}>


    <img 
      transition:name={`${name}-image`}
      class:list={[
      {
         'w-22 h-22': !isBig,
         'w-26 h-26': isBig,
      },
    ]} src={imageUrl} alt={name}>

    <span class:list={[
      'capitalize',
      {
        'text-4xl text-blue-300': isBig
      }
    ]}>#{id} { name }</span>
</a>
