---

const links = [
    {href: '/', name: 'Listado'},
    {href: '/pokemons/1', name: 'Paginado'},
    {href: '/favorites', name: 'Favoritos'},
    {href: '/islands', name: 'Islas'},
];

const currentPath = Astro.url;
const { pathname } = currentPath;

---

<!-- component -->
<nav class="shadow bg-slate-900">
    <div class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300">
        <!-- {
            links.map( ({href, name}) => {
                return <a href={href} 
                    class:list={[
                        "text-gray-800 dark:text-gray-200 mx-1.5 sm:mx-6",
                        {
                            'border-b-2 border-blue-500': pathname === href,
                        }
                    ]}>{name}</a>
            })
        } -->
        {
            links.map( ({href, name}) => {
                return <div>
                            <a 
                                href={href} 
                                class="text-gray-800 dark:text-gray-200 mx-1.5 sm:mx-6"
                            >
                                {name}
                            </a>
                            {
                                pathname === href ? (
                                    <div 
                                        transition:name="menu-line"
                                        class="border-b-2 border-blue-500 mx-4">
                                    </div>
                                ) : (
                                    <div class="border-b-2 border-transparent"></div>
                                )
                            }
                            
                        </div>
            })
        }

        <a href="#" class="border-b-2 border-transparent hover:text-gray-800 dark:hover:text-gray-200 hover:border-blue-500 mx-1.5 sm:mx-6">blog</a>
    </div>
</nav>